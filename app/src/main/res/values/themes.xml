<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Puns" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/fire_opal</item>
        <item name="colorPrimaryVariant">@color/fire_opal_dark</item>
        <item name="colorOnPrimary">@color/rich_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_yellow</item>
        <item name="colorSecondaryVariant">@color/orange_yellow_dark</item>
        <item name="colorOnSecondary">@color/rich_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="room_code_digit">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/rich_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:backgroundTint">@color/orange_yellow</item>
        <item name="android:background">@drawable/rounded_corner_borders</item>
        <item name="android:layout_margin">4dp</item>
    </style>
</resources>